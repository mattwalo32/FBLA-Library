<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin">

    <TextView
        android:id="@+id/btn_get"
        android:layout_width="@dimen/btn_get_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin"
        android:background="@color/colorAccent400"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/text"
        android:textColor="@android:color/white"
        android:text="@string/get" />

    <TextView
        android:id="@+id/special_book_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/text"
        android:textColor="@android:color/white"
        android:padding="@dimen/margin"
        android:text="Paperback Edition"/>

    <TextView
        android:id="@+id/list_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/btn_get"
        android:textSize="@dimen/text"
        android:textColor="@color/colorSecondaryText"
        android:text="Nth in line"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin"
        android:background="@color/colorPrimary300">

        <TextView
            android:id="@+id/currently_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/text"
            android:textColor="@android:color/black"
            android:text="@string/currently_available"/>

        <TextView
            android:id="@+id/total_books"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/text"
            android:textColor="@android:color/black"
            android:text="@string/total"/>

        <LinearLayout
            android:id="@+id/book_items_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/currently_available"
            android:orientation="vertical">

        </LinearLayout>

    </RelativeLayout>
</ScrollView>